<%= form_for(@gram, url: choose_new_or_edit) do |f| %>
  <% if @gram.errors.any? %>
    <div id="error_explanation">
      <h2><%= @gram.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @gram.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title,class: 'form-control' %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content,class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "Pictures", grams_path %>
